<div id="carouselExampleControls" class="carousel slide m-3" data-ride="carousel">
  <div class="carousel-inner">
    <% @trades.each_with_index do |trade, index| %>
    <% if index == 0 %>
    <div class="carousel-item active">
      <div class="card text-center w-75 mx-auto">
        <div class="card-header bg-secondary">
          <%= trade.posting.title %>
        </div>
        <div class="card-body bg-dark">
          <h5 class="card-title">Expected Offer:</h5>
          <p class="card-text"><%= trade.posting.expected_offer %></p>
          <h5 class="card-title">Trade Offered:</h5>
          <p class="card-text"><%= trade.offer %></p>
          <%= button_to "Cancel Trade Offer", posting_trades_path(trade.posting.id,trade_id: trade.id), method: (:delete), class:"btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-body bg-secondary">
          Trade Offered On: <%= trade.created_at.to_date %>
        </div>
      </div>
    </div>
    <% else %>
    <div class="carousel-item">
      <div class="card text-center w-75 mx-auto">
        <div class="card-header bg-secondary">
          <%= trade.posting.title %>
        </div>
        <div class="card-body bg-dark">
          <h5 class="card-title">Expected Offer:</h5>
          <p class="card-text"><%= trade.posting.expected_offer %></p>
          <h5 class="card-title">Trade Offered:</h5>
          <p class="card-text"><%= trade.offer %></p>
          <%= button_to "Cancel Trade Offer", posting_trades_path(trade.posting.id,trade_id: trade.id), method: (:delete), class:"btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-body bg-secondary">
          Trade Offered On: <%= trade.created_at.to_date %>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>