<div id="offersMadeCarousel" class="carousel slide m-3" data-ride="carousel">
  <div class="carousel-inner">
      <% @postings.each do |post| %>
      <% post.trades.each_with_index do |trade, index| %>
      <% if index == 0 %>
    <div class="carousel-item active">
      <div class="card text-center w-75 mx-auto">
        <div class="card-header bg-secondary">
          <%= post.title %>
        </div>
        <div class="card-body bg-dark">
          <h5 class="card-title">Trade Offered:</h5>
          <p class="card-text"><%= trade.offer %></p>
          <h5 class="card-title">Offer From: <%= trade.user.first_name %> <%= trade.user.last_name %></h5>
          <h6 class="card-title">Current Status: <%= trade.offer_status %></h6>
          <button value="<%= trade.id %>" class="accept-btn btn btn-outline-success">Accept Offer</button>
          <button value="<%= trade.id %>" class="decline-btn btn btn-outline-danger">Decline Offer</button>
        </div>
        <div class="card-footer text-body bg-secondary">
          Trade Offered On: <%= trade.created_at.to_date %>
        </div>
      </div>
    </div>
    <% else %>
    <div class="carousel-item">
      <div class="card text-center w-75 mx-auto">
        <div class="card-header bg-secondary">
          <%= post.title %>
        </div>
        <div class="card-body bg-dark">
          <h5 class="card-title">Trade Offered:</h5>
          <p class="card-text"><%= trade.offer %></p>
          <h5 class="card-title">Offer From: <%= trade.user.first_name %> <%= trade.user.last_name %></h5>
          <h6 class="card-title">Current Status: <%= trade.offer_status %></h6>
          <button value="<%= trade.id %>" class="accept-btn btn btn-outline-success">Accept Offer</button>
          <button value="<%= trade.id %>" class="decline-btn btn btn-outline-danger">Decline Offer</button>
        </div>
        <div class="card-footer text-body bg-secondary">
          Trade Offered On: <%= trade.created_at.to_date %>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#offersMadeCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#offersMadeCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>