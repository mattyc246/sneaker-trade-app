<div class="mx-auto p-5 border border-success rounded shadow-lg">
	<h1> Sign in to your account!</h1>
	<%= form_for :user, url: {action: "sign_in"} do |f| %>
	<div class="form-group">
			<%= f.label 'Email' %>
			<%= f.text_field :email, class:"form-control", placeholder:"stevejobs@apple.com" %></br>
			<%= f.label 'Password' %>
			<%= f.password_field :password, class:"form-control", placeholder:"********"  %></br>
			<%= f.submit "Sign In", class:"btn btn-outline-dark" %>
			<%= link_to "Sign in with Google", "/auth/google_oauth2", class:"btn btn-outline-success" %>
	</div>
	<% end %>
</div>